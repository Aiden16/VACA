<% layout('layouts/boilerplate') %>


    <div class="col-6 offset-3">
        <form action="/places/<%=foundPlace.id%>?_method=PUT" method="Post" novalidate class="needs-validation">
            <div class="mb-3">
                <label class="form-label" for="title">Title</label>
                <input type="text" class="form-control" name="places[title]" value="<%=foundPlace.title%>" id="title" required>
            </div>
            <div class="mb-3">
                <label class="form-label" for="location">Location</label>
                <input type="text" class="form-control" name="places[location]" value="<%=foundPlace.location%>" id="location" required>
            </div>
            <div class="mb-3">
                <label class="form-label" for="image">Image Url</label>
                <input type="text" class="form-control" name="places[image]" value="<%=foundPlace.image%>" id="image" required>
            </div>
            <div class="mb-3">
                <label class="form-label" for="price">Price</label>
                <div class="input-group">
                    <span class="input-group-text" id="price-label">$</span>
                    <input type="text" class="form-control" id="price" placeholder="0.00" name="places[price]" value="<%=foundPlace.price%>" aria-label="Price" aria-describedby="price-label" required>
                  </div>
            </div>
            
            <div class="mb-3">
                <label class="form-label" for="description">Description</label>
                <textarea type="text" class="form-control" name="places[description]" value="<%=foundPlace.description%>"id="description" required><%=foundPlace.description%></textarea>
            </div

            <div class="mb-3">
            <button class="btn btn-info">Update</button>
            <a href="/places" class="btn btn-primary">Go back</a>

            </div>
        </form>
        <div class="mb-3">
        </div>
    </div>